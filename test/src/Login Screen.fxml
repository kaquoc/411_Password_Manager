<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: #fffef7;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SceneController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fffef7;">
         <top>
            <Text fill="#3fbcad" strokeType="OUTSIDE" strokeWidth="0.0" text="Vault Login" translateY="25.0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial" size="48.0" />
               </font>
            </Text>
         </top>
         <center>
            <TextField fx:id="PasswordLogin" maxWidth="300.0" minWidth="300.0" promptText="Password" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button fx:id="LoginButton" mnemonicParsing="false" onAction="#login" style="-fx-background-color: #3fbcad;" text="Login" textFill="WHITE" translateX="125.0" translateY="-125.0" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <TextField fx:id="UsernameLogin" layoutX="10.0" layoutY="10.0" maxWidth="250.0" minWidth="300.0" promptText="Username" translateX="140.0" translateY="140.0" />
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#switchToTitlescreen" style="-fx-background-color: #3fbcad;" text="Return" textFill="WHITE" translateX="490.0" translateY="335.0" />
      <Label fx:id="PasswordError" textFill="#636363" translateX="225.0" translateY="300.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
